                                <tr>
                                    <th scope="col">No</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Image</th>
                                    <th scope="col">Created At</th>
                                    <th scope="col">Option</th>
                                    <th scope="col">Option</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% adminBlogData?.forEach((data, index)=>{%>
                                    <tr>
                                        <td>
                                            <%= index + 1%>
                                        </td>
                                        <td>
                                            <%=data.category%>
                                        </td>
                                        <td>
                                            <%=data.title%>
                                        </td>
                                        <td class="ddd dashboard-description">
                                            <%=data.description%>
                                        </td>
                                        <td>
                                            <img class="dashboard-img" src="/uploads/blogImages/<%=data.image%>" alt="">
                                        </td>
                                        <td>
                                            <%=data.createdAt.toLocaleString()%>
                                        </td>
                                        <td><a href="admin/<%= data._id %>">EDIT</a></td>

                                        <td><a href="admin/delete/<%= data._id %>">DELETE</a></td>
                                    </tr>
                                    <% })%>
                            </tbody>
                        </table>
                    </div>
