    <section class="full-section ">
        <div class="articles">

            <% findPopularBlog.forEach(blog=> { %>

                <div class="article">
                    <div class="left">
                        <img src="/uploads/popularBlogImages/<%= blog.image %>" alt="article-photo">
                    </div>
                    <div class="right">
                        <p class="date">userName
                            <%= blog.updatedAt.toLocaleString() %>
                        </p>
                        <h5>Dhaka - Bangladesh</h5>
                        <p class="p-description">
                            <%= blog.description %>

                                <a href=" <%=blog._id%>   ">Read more</a>
                        </p>
                        <div class="optionnal">
                            <small class="text-muted float-end">Last updated <%= blog.updatedAt.toLocaleDateString() %>
                            </small>
                            <img class="writer-img" src="/uploads/popularBlogImages/<%= blog.image %>" alt="">
                        </div>
                    </div>
                </div>

                <% }) %>

        </div>
        <div>
            <h4 class=" mt-4 mb-3">Recent Posts</h4>

            <% findPopularBlog.forEach(blog=> { %>

                <div class="recent-post">
                    <div class="post-container mt-3">
                        <img src="/uploads/popularBlogImages/<%= blog.image %>" alt="">
                        <div class="post-text">
                            <h6>
                                <%= blog.title %>
                            </h6>
                            <div>
                                <p>
                                    <i class="fas fa-calendar-week"></i> Date: <%= blog.updatedAt.toLocaleDateString()
                                        %> <span> </span> <i class="fas fa-box"></i>
                                        <%= blog.category %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <% }) %>

                    <div class=" popular-post-div mx-au mt-4">
                        <div class="popular-post mt-2">
                            <div class="mx-auto">
                                <img src="../images/an.jpg" alt="" class="img-fluid p-image">
                            </div>
                        </div>
                        <div class="p-p-body mt-3 mx-auto ">
                            <h5 class="text-center">Hello! I am Xchng</h5>
                            <p>
                                Hi, I'm Steven, a Florida native, who left my carrer in corporate wealth management
                                six years corporate wealth.Stories is a clean and minimal blog template for perfect
