    <section class="full-section ">
        <div class="articles">



            <div class="article">
                <% adminBlogData?.forEach((data, index)=>{%>
                <div class="left  mt-3">
                    <img src="/uploads/blogImages/<%=data.image%>" alt="article-photo">
                </div>
                <div class="right">
                    <p class="date"><%= data.updatedAt.toLocaleDateString() %></p> </p>
                    <h5> <%= data.title %> </h5>
                    <p class="p-description">
                      <%= data.description %>
                        <a href="#">Read more</a>
                    </p>
                    <div class="optionnal">
                        <small class="text-muted float-end"><%= data.updatedAt.toLocaleTimeString() %></small>
                        <img class="writer-img" src="/uploads/blogImages/<%=data.image%>" alt="">
                    </div>
                </div>
                <% })%>
            </div>
        </div>
        <div>
            <h4 class=" mt-4 mb-3">Recent Posts</h4>
            <% adminBlogData?.forEach((data, index)=>{%>
            <div class="recent-post">
