    <title>Header_Html</title>
</head>

<body>



    <section>
        <div class="">
            <div class="row">
                <div class="col-md-6 col-lg-6">
                    <img class="img-fluid registerImg" src="../images/write.jpg" alt="">
                </div>
                <div class="col-md-6 col-lg-6 py-5 mt-5">
                    <form action="AdminBlog/<%= findBlog._id %>" method="POST" type="application/x-www-urlencoded"
                        class="row g-3">
                        <div class="col-md-6">
                            <label for="category" class="form-label">Category</label>
                            <input type="text" class="form-control" placeholder="category" name="category"
                                value="<%= findBlog.category %>">
                        </div>
                        <div class="col-md-6">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" class="form-control" id="lname" placeholder="Title" name="title"
                                value="<%= findBlog.title %>">
                        </div>

                        <div class="col-12 mt-5">
                            <textarea id="" cols="90" rows="5" placeholder="Write yor message...."
                                name="description"><%= findBlog.description %></textarea>
                        </div>
                        <div class="col-12">
                            <input type="submit" value="Send" class="reg-btn">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>

</html>